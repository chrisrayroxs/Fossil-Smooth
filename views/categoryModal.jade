#modalFSSC.fssc
	#heading New Category Feature
	#content
	
		input#fsscAdd(placeholder='Type FSSC Code You Wish To Add Here', tabindex='1')
		button.btn#createFSSC(tabindex='2') Create

		#fsscConfirmation
			label Are you sure you want to create this?
			button.btn.btn-success#createFSSC_y Yes
			button.btn.btn-danger#createFSSC_n No

		h2 Current Codes:
		ul.fsscList

#modalConfig.options
	#heading Edit Feature
	#content
	
		h1#cat_fssc

		ul
			li
				i.icon-link
				input#cat_link(type='text', placeholder='Link')<br/>
			li
				i.icon-camera-retro
				input#cat_img(type='text', placeholder='Image Path')
		
		// form(action="...", method="post", enctype="multipart/form-data")
